<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:test="clr-namespace:Test">
  <ItemsPanelTemplate x:Key="ItemsPanelTemplate.001">
    <StackPanel Orientation="Horizontal"/>
  </ItemsPanelTemplate>
  <DataTemplate x:Key="CharacterSelection_View" DataType="test:Character_ViewModel">
    <Viewbox Stretch="Uniform" VerticalAlignment="Stretch">
      <Grid Width="2" Height="3">
        <TextBlock x:Name="Character_Name" Text="{Binding Path=Name}" HorizontalAlignment="Center"/>
      </Grid>
    </Viewbox>
  </DataTemplate>
</ResourceDictionary>
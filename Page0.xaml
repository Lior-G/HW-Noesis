<Page
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  mc:Ignorable="d"
  d:DesignWidth="1920"
  d:DesignHeight="1080"
  Background="#FF4D5052" Height="960" xmlns:system="clr-namespace:System;assembly=mscorlib" d:DataContext="Characters_Data">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="4*"/>
      <ColumnDefinition Width="1*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="4*"/>
      <RowDefinition Height="1*"/>
    </Grid.RowDefinitions>
    <ScrollViewer x:Name="CharacterScrollView" Grid.Row="1" Margin="0" HorizontalScrollBarVisibility="Auto">
      <ListBox x:Name="CharacterSelection" HorizontalAlignment="Left" ItemsPanel="{DynamicResource ItemsPanelTemplate.001}" ItemsSource="{Binding Path=Characters_Collection}" ItemTemplate="{DynamicResource CharacterSelection_View}"/>
    </ScrollViewer>
  </Grid>
</Page>